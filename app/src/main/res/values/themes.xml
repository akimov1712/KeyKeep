<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KeyKeep" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorAccent">@color/element_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@color/element_red</item>
    </style>

    <style name="Theme.KeyKeep" parent="Base.Theme.KeyKeep" />

    <style name="style_btn_drawer_layout">
        <item name="android:background">@drawable/background_drawer_button</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:textAppearance">@style/style_text_primary</item>
    </style>

    <style name="style_edit_text" parent="@style/style_text_secondary">
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <style name="style_pin_edit_text" parent="@style/style_text_large_title">
        <item name="android:background">@drawable/background_drawer_button</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/text_red</item>
        <item name="OtpCursorColor">@color/element_red</item>
        <item name="OtpItemCount">4</item>
        <item name="OtpItemSpacing">16dp</item>
        <item name="OtpLineColor">@color/element_red</item>
        <item name="OtpLineWidth">2dp</item>
        <item name="OtpViewType">line</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

</resources>